@page
@model CORETest.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
}

<h1>ثـبـت نـام</h1>
<form method="post">
    <input type="text" asp-for="UserName" placeholder="نام کاربری" required="required" />
    <span asp-validation-for="UserName" style="color: red"></span>
    <br /><br />
    <input type="text" asp-for="FullName" placeholder="نام و نام خانوادگی" required="required" />
    <span asp-validation-for="FullName" style="color: red"></span>
    <br /><br />
    <input type="password" asp-for="Password" placeholder="رمز عبور" required="required" />
    <span asp-validation-for="Password" style="color: red"></span>
    <br /><br />
    <input type="password" asp-for="RePassword" placeholder="تکرار رمز عبور" required="required" />
    <span asp-validation-for="RePassword" style="color: red"></span>
    <br /><br />
    <button type="submit" class="btn btn-primary btn-block btn-large">ثـبـت</button>
    <a asp-page="Login">ورود بـه حـساب</a>
</form>
